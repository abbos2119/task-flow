                    {
                        "name": "stage_id",
                        "in": "query",
                        "description": "Stage identifier",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "mine",
                        "in": "query",
                        "description": "Only tasks where current user is responsible",
                        "required": false,
                        "schema": {
                            "type": "boolean"
