        "/api/v1/task-management/checkpoints/{id}/apply": {
            "post": {
                "tags": [
                    "Checkpoints"
                ],
                "summary": "Apply workflow transition to checkpoint",
                "operationId": "9321d6dda6601436679d869bf6be3159",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "transition_name"
                                ],
                                "properties": {
                                    "transition_name": {
                                        "type": "string",
                                        "example": "start_fixing"
                                    },
                                    "end_comment": {
                                        "type": "string",
                                        "nullable": true
                                    },
                                    "context": {
                                        "type": "object",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/task-management/checkpoints/{id}/assign": {
            "post": {
                "tags": [
                    "Checkpoints"
                ],
                "summary": "Assign responsible user to checkpoint",
                "operationId": "ac549826dca61c43b7b15c09df0402e3",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "responsible_id"
                                ],
                                "properties": {
                                    "responsible_id": {
                                        "description": "User ID",
                                        "type": "string"
                                    },
                                    "deadline_at": {
                                        "type": "string",
                                        "example": "2026-12-31 23:59:59",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
